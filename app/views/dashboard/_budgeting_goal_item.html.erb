<li class="bg-zinc-100 p-4 rounded-lg mb-2">
    <h2 class="text-xl font-semibold text-blue-500"><%= budgeting_goal.name %></h2>
    <p class="text-gray-700">Amount: <%= budgeting_goal.amount %></p>
    <p class="text-gray-700">Category: <%= budgeting_goal.category %></p>
    <p class="text-gray-700">Date: <%= budgeting_goal.date %></p>
    
    <div class="flex space-x-2">
        <%= link_to 'Edit', edit_budgeting_goal_path(budgeting_goal), class: 'bg-blue-500 text-white px-4 py-2 rounded-lg mt-2' %>
        <%= button_to 'Delete', delete_budgeting_goal_path(budgeting_goal), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-500 text-white px-4 py-2 rounded-lg mt-2' %>
    </div>
</li>
