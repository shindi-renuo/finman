<div data-dashboard-target="newBudgetingGoalModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-lg p-6 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-blue-500 mb-4">Add New Budgeting Goal</h2>
    <%= form_for @budgeting_goal, url: create_budgeting_goal_path, method: :post, local: true, data: { turbo: false } do |form| %>
      <div class="mb-4">
        <%= form.label :name, "Goal Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :name, id: "goalName", placeholder: "Enter goal name", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :amount, "Target Amount", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :amount, id: "goalAmount", placeholder: "Enter target amount", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :start_date, "Start Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.date_field :start_date, id: "goalStartDate", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :end_date, "End Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.date_field :end_date, id: "goalEndDate", class: "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="flex justify-end">
        <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2" data-action="dashboard#closeNewBudgetingGoalModal">Cancel</button>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Goal</button>
      </div>
    <% end %>
  </div>
</div>
