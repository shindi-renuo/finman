<div data-dashboard-target="newBudgetingGoalModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-lg p-6 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-blue-500 mb-4">Add New Budgeting Goal</h2>
    <form>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="goalName">Goal Name</label>
        <input id="goalName" type="text" placeholder="Enter goal name" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="goalAmount">Target Amount</label>
        <input id="goalAmount" type="number" placeholder="Enter target amount" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="goalDueDate">Due Date</label>
        <input id="goalDueDate" type="date" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="flex justify-end">
        <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2" data-dismiss="modal">Cancel</button>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Goal</button>
      </div>
    </form>
  </div>
</div>