<div data-dashboard-target="newExpenseModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-lg p-6 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-blue-500 mb-4">Add New Expense</h2>
    <form>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="expenseName">Expense Name</label>
        <input id="expenseName" type="text" placeholder="Enter expense name" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="expenseAmount">Amount</label>
        <input id="expenseAmount" type="number" placeholder="Enter amount" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="expenseCategory">Category</label>
        <select id="expenseCategory" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option>Food</option>
          <option>Transportation</option>
          <option>Utilities</option>
          <!-- Add more categories as needed -->
        </select>
      </div>
      <div class="flex justify-end">
        <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2" data-action="dashboard#closeNewExpenseModal">Cancel</button>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Expense</button>
      </div>
    </form>
  </div>
</div>