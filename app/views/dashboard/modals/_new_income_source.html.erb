<div data-dashboard-target="newIncomeSourceModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-lg p-6 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-blue-500 mb-4">Add New Income Source</h2>
    <form>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="incomeSourceName">Income Source Name</label>
        <input id="incomeSourceName" type="text" placeholder="Enter income source name" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="incomeAmount">Amount</label>
        <input id="incomeAmount" type="number" placeholder="Enter amount" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="interval">Interval</label>
        <select id="interval" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="daily">Daily</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
          <option value="annually">Annually</option>
          <option value="one-time">One Time</option>
        </select>
      </div>
      <div class="flex justify-end">
        <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2" data-action="dashboard#closeNewIncomeSourceModal">Cancel</button>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Income</button>
      </div>
    </form>
  </div>
</div>