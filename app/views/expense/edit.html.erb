<%= form_for @expense, url: update_expense_path(@expense), method: :patch, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md" do |f| %>
  
  <h1 class="text-2xl font-bold text-blue-500 mb-4">Edit Expense</h1>
  
  <div class="mb-4">
    <%= f.label :name, "Expense Name", class: "block text-gray-700" %>
    <%= f.text_field :name, class: "w-full p-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="mb-4">
    <%= f.label :amount, "Amount", class: "block text-gray-700" %>
    <%= f.number_field :amount, class: "w-full p-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="mb-4">
    <%= f.label :category, "Category", class: "block text-gray-700" %>
    <%= f.text_field :category, class: "w-full p-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="mb-4">
    <%= f.label :date, "Date", class: "block text-gray-700" %>
    <%= f.date_select :date, class: "w-full p-2 border border-gray-300 rounded-lg" %>
  </div>

  <div class="flex items-center justify-between">
    <%= f.submit "Update Expense", class: "bg-blue-500 hover:bg-blue-600 transition linear duration-300 cursor-pointer text-white px-4 py-2 rounded-lg" %>
    <%= link_to 'Cancel', root_path, class: "text-blue-500 underline" %>
  </div>

<% end %>