<div class="flex items-center justify-center min-h-screen p-6">
  <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-8">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "w-full transition-all cursor-pointer duration-300 flex justify-center py-3 px-4 border border-transparent rounded-md shadow-md text-sm font-medium text-white bg-black hover:bg-gray-900 focus:ring-2 focus:ring-offset-2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links", class: "text-sm text-center mt-4 text-gray-500" %>
  </div>
</div>
